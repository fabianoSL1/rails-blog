<%= render "shared/header" %>

<div class="container">

  <div class="mt-5 row justify-content-center">
    <div class="col-6">
      <div class="d-flex gap-2 mb-4">
        <%= render "posts/actions", post: @post %>
      </div>
      <div class="d-flex flex-wrap gap-2 mb-3">
        <% @post.tags.each do |tag| %>
          <%= link_to tag.name, posts_path(tag_id: tag.id), class: "btn btn-sm btn-primary" %>
        <% end %>
      </div>
      <h2 class="text-capitalize mb-4"><%= @post.title %></h2>

      <% @post.content.split("\n").each do |paragraph| %>
        <p class="text-capitalize" style="text-align: justify"><%= paragraph %></p>
      <% end %>

    </div>
  </div>

  <div class="row justify-content-center">
    <div class="mb-5 col-7">

      <%= render "comments/form" %>

      <%= render "comments/index" %>
    </div>
  </div>
</div>

