<%# The container tag
  - available local variables
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
    paginator:     the paginator that renders the pagination tags inside
-%>
<%= paginator.render do -%>
  <nav class="pagination" role="navigation" aria-label="pager">
    <ul class="pagination">
      <li class="page-item <%= "disabled" if current_page.first? %>"><%= first_page_tag  %></li>
      <li class="page-item <%= "disabled" if current_page.first? %>"><%= prev_page_tag %></li>
      <% each_page do |page| -%>
        <% if page.display_tag? -%>
          <li class="page-item"> <%= page_tag page %></li>
        <% elsif !page.was_truncated? -%>
          <li class="page-item"><%= gap_tag %></li>
        <% end -%>
      <% end -%>
      <li class="page-item <%= "disabled" if current_page.last? %>"><%= next_page_tag %></li>
      <li class="page-item <%= "disabled" if current_page.last? %>"><%= last_page_tag %></li>
    </ul>
  </nav>
<% end -%>
