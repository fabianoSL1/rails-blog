<div class="container">
    <header class="border-bottom lh-1 py-3">
        <div class="row flex-nowrap justify-content-between align-items-center">
            
            <div class="offset-md-4 col-md-4 text-center">
                <div class="d-flex gap-2">
                  <input
                      type="text"
                      class="form-control form-control-sm"
                      placeholder="<%= I18n.t "search" %>"
                  />

                  <button class="btn btn-sm btn-secondary">
                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                          <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
                      </svg>
                  </button>

                  <a href="<%= root_path %>" class="btn btn-sm btn-secondary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-house" viewBox="0 0 16 16">
                      <path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L2 8.207V13.5A1.5 1.5 0 0 0 3.5 15h9a1.5 1.5 0 0 0 1.5-1.5V8.207l.646.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293zM13 7.207V13.5a.5.5 0 0 1-.5.5h-9a.5.5 0 0 1-.5-.5V7.207l5-5z"/>
                    </svg>
                  </a>
                </div>
            </div>

          <div class="col-md-4 d-flex justify-content-end align-items-center">
            <div class="d-flex gap-2">
              <div class="dropdown">
                <button class="btn btn-sm btn-outline-secondary dropdown-toggle"  type="button" data-bs-toggle="dropdown">
                  <%= I18n.t "language" %>
                </button>
                <ul class="dropdown-menu">
                  <li><%= button_to "en", locale_path(locale: "en"), method: :put, class: "dropdown-item" %></li>
                  <li><%= button_to "pt-BR", locale_path(locale: "pt-BR"), method: :put, class: "dropdown-item" %></li>
                </ul>
              </div>

            <% if Current.user.present? %>
              <div class="dropdown">
                <button class="btn btn-sm btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                  <%= Current.user.name %>
                </button>
                <ul class="dropdown-menu">
                  <li>
                    <%= link_to profile_path, class: "dropdown-item" do %>
                      <%= I18n.t "profile" %>
                    <% end %>
                  </li>
                  <li><hr class="dropdown-divider"></li>
                  <li>
                    <%= button_to logout_path, method: :delete, class: "dropdown-item" do %>
                      <%= I18n.t "signOut" %>
                    <% end %>
                  </li>
                </ul>
              </div>
            <% else %>
              <a class="btn btn-sm btn-primary" href="<%= sign_in_path %>"><%= I18n.t "signIn" %></a>
            <% end %>
            </div>
          </div>
        </div>
    </header>
</div>
