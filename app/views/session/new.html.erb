<div class="container text-center">
  <div class="row align-items-center justify-content-center">
    <div class="col-md-4 mt-5"><h2 class="my-4">Sign In</h2>
      <%= form_with url: sign_in_path, scope: :user do |form| %>
        <div class="form-floating mb-3">
          <%= form.email_field :email, {
            class: "form-control",
            placeholder: "email@example.com"
          } %>
          <%= form.label :email %>
        </div>

        <div class="form-floating mb-3">
          <%= form.password_field :password, {
            class: "form-control",
            placeholder: "email@example.com"
          } %>
          <%= form.label :password %>
        </div>

        <div class="d-flex flex-column gap-4 mt-4">
          <div class="d-flex flex-column gap-1">
            <%= form.submit "Sign In", class: "btn btn-primary" %>
            <%= link_to "Recovery password", new_password_path, class: "btn btn-outline-secondary" %>
          </div>

          <p class="m-0">or</p>

          <%= link_to "Sign up", sign_up_path, class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>